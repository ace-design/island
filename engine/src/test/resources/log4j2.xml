<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} %-5level %logger{36}: %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
        <Logger name="eu.ace_design.Island/Map" level="off" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="eu.ace_design.Island/Board" level="off" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="eu.ace_design.Island/Game" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
</Configuration>